/* pages/index/index/index.wxss */
@import "../productItem/productItem.wxss";
page {
  background: #fff
}
.bgWrap{
  width: 750rpx;
  height: 880rpx;
  background:rgba(96,22,125,1) linear-gradient(45deg,rgba(28,30,29,1) 0%,rgba(33,62,57,1) 100%);
  position: relative;
}
.bgImg{
  width: 750rpx;
  height: 880rpx;
  display: block;
}

.bgWrap .textCenter {
  position: absolute;
  top: 246rpx;
  left: 0;
  color: #FFFFFF;
  width: 750rpx;
  height: 220rpx;
}

.bgWrap .textCenter .storeName {
  font-size:32rpx;
  font-weight: 400;
  letter-spacing:12rpx;
  text-align: center;
}

.bgWrap .textCenter .shopText{
  letter-spacing:2rpx;
  font-weight:500;
  font-size:38rpx;
  text-align: center;
  margin-top: 4rpx;
  margin-bottom: 36rpx;
}

.bgWrap .textCenter .shop{
  line-height:40rpx;
  font-size:28rpx;
  font-weight:300;
  text-align: center;
  color: #C3A25F;
}

.bgWrap .textCenter .shop image {
  width: 34rpx;
  height: 34rpx;
  margin-left: 18rpx;
  vertical-align:middle;
}

.bgWrap .textCenter .imgFilter {
  width: 750rpx;
  height: 108rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.bgWrap .textCenter image{
  width: 239rpx;
  height: 60rpx;
}

.search {
  display: flex;
  justify-content: center;
  position: relative;
}

.searchInput {
  width: 672rpx;
  height: 64rpx;
  margin-top: 39rpx;
  margin-bottom: 33rpx;
  background-color: #EEEEEE;
  text-align: center;
}
.search-img{
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 57rpx;
  left: 229rpx;
  z-index: 1000;
}

.placeholder {
  font-size:28rpx;
  color: #C1C1C1;
}

.shopIntro {
  width:750rpx;
  /* height:923px; */
  background:rgba(96,22,125,1) linear-gradient(45deg,rgba(28,30,29,1) 0%,rgba(33,62,57,1) 100%);
  overflow: hidden;
}

.shopTitle{
  display: flex;
  margin-top: 89rpx;
  justify-content: center;
  align-items:center;

}

.smallSpot{
  width: 23rpx;
  height: 23rpx;
  margin-right: 23rpx;
}

.shopName{
  font-size:32rpx;
  color: #FFFFFF;
  font-weight:400;
  letter-spacing:12rpx;
  width:313rpx;
  height:60rpx;
  line-height:60rpx;
  -webkit-filter:blur(0.5px);
}

.shopDesWrap{
  display: flex;
  justify-content: center;
  margin-top: 82rpx;
}

.shopDes{
  width:672rpx;
  height:556rpx;
  font-size:26rpx;
  font-weight:normal;
  color:#FFFFFF;
  line-height:50rpx;
  font-family:STSongti-SC-Light;
}

.product{
  color: #FFFFFF;
  background-color: #1C1E1D;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 337rpx;
}

.productTitle{
  margin-top: 30rpx;
  font-size:30rpx;
  font-weight:400;
}
.productTitlebar > image{
  width: 250rpx;
  height: 13rpx;
}
