/* 轮播指示点样式 */
/*用来包裹所有的小圆点  */

.dots {
  width: 156rpx;
  height: 36rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 320rpx;
  top: 641rpx;
}

/*未选中时的小圆点样式 */

.dot {
  width: 17rpx;
  height: 17rpx;
  border-radius: 50%;
  margin-right: 26rpx;
  background-color: #EDEDED;
}

/*选中以后的小圆点样式  */

.active {
  width: 17rpx;
  height: 17rpx;
  background-color: #29CC41;
}