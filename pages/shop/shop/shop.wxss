page {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100vh;
}

.tit {
  box-sizing: border-box;
  padding: 30rpx 30rpx;
  height: 94rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.tit .allcheckbox {
  display: flex;
  align-items: center
}

.tit .allcheckbox  image {
  margin-right: 6rpx;
}

.tit .del {
  margin-left: 56rpx;
}

.list {
  flex: 1;
  overflow: hidden;
}

.item {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background: #fff;
}

.item .left {
  margin-left: 40rpx;
  margin-right: 60rpx;
}

/* 产品样式 */

.t-right {
  height: 190rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.t-right .r-tit {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.t-right .r-exted {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.r-exted .re-left {
  flex: 1;
  display: inline-flex;
  justify-content: space-between;
}

.r-exted .re-right {
  margin-left: 58rpx;
}

.t-right .r-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
  font-size: 28rpx;
}

.bottom {
  display: flex;
  width: 100%;
  height: 100rpx;
  /* position: fixed; *//* bottom: 0; */
}

.total {
  padding-left: 40rpx;
  flex: 1;
  background: #474747;
}

.ttop {
  padding-bottom: 4rpx;
  font-size: 32rpx;
  color: #fff;
}

.ttop > text {
  color: #c09e57;
  font-size: 40rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.tbottom {
  font-size: 20rpx;
  color: #cacaca;
}

.gopay {
  width: 232rpx;
  height: 100rpx;
  color: #333;
  background: #c09e57;
}
