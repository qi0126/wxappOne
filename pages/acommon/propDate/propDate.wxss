.prop-wrap {
  display: flex;
  justify-content: center;
  position: fixed;
  top: 0;
  z-index: 3;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .3);
}

.prop-con {
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  align-items: center;
  margin-top: 310rpx; 
  width: 690rpx;
  background: #fafafa;
  border-radius: 4rpx;
}

.prop-tit {
  margin-top: 38rpx;
  margin-bottom: 52rpx;
  text-align: center;
  color: #666;
}

.prop-info {
  width: 100%;
  box-sizing:border-box;
  padding: 0 30rpx;
  background: #fff
}

.pro-btn {
  display: flex;
  width: 100%;
  margin-top: 75rpx
}

.pro-btn .pro-btl {
  background: #f5f5f5;
  color: #333
}

/*按钮  */

.btn {
  color: #999;
  background: white;
  font-size: 28rpx;
  border: 1px solid #e6e6e6;
  width: 250rpx;
  border-radius: 50rpx;
  text-align: center;
}

.btn.disabled {
  color: #999;
  background: #e6e6e6;
}

.btn::after {
  border: none;
}

.btn:active {
  opacity: 0.8;
}

.btn-default {
  width: 100%;
  line-height: 88rpx;
  color: white;
  border-radius: inherit;
  background: #a71c20;
  border: none;
}

/* 日期  */
.bt-list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  min-height: 98rpx;
}

.bt-date > picker .picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  min-width: 310rpx;
  line-height: 64rpx;
  padding-left: 40rpx;
  padding-right: 20rpx;
  border-radius: 4px;
  border: 1px solid #999;
}