/* pages/serach/serach/search.wxss */
page {
  background: #fff
}
.searchTitle {
  letter-spacing:7rpx;
  font-size:34rpx;
  font-weight:400;
  text-align: center;
  margin-top: 71rpx;
  margin-bottom: 88rpx;
}

.searchCentent{
  display: flex;
  align-items: center;
  position: relative;
  margin-bottom: 70rpx;
}

.searchCentent .searchInput{
  border-bottom: 1rpx solid #E5E5E5;
  height: 60rpx;
  margin-left: 32rpx;
  padding-left: 52rpx;
  width:577rpx;
}

.searchCentent .search-img {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  left: 40rpx;
}

.searchCentent .cancel{
  color: #C09E57;
  font-size:28rpx;
  font-weight:400;
  margin-left:14rpx;
}

.placeholder{
  color: #D5D5D5;
  font-size:28rpx;
  font-weight: 400;
}

/* 热卖 */

.heatSell {
  padding-left: 32rpx;
}

.heatSell .title{
  color: #000000;
  line-height:42px;
  font-size:30rpx;
  font-weight: 500;
}

.heatSell .scrollWrap {
  white-space: nowrap;
}
.heatSell .scrollWrap .scrollItem {
  display: inline-block;
  margin-right: 30rpx;
}

.heatSell .scrollWrap image{
  width: 135rpx;
  height: 135rpx;
}
.heatSell .line {
  height:3rpx;
  background:#E5E5E5;
  margin-right: 36rpx;
  margin-top: 19rpx;
}

/* 搜索历史1 */
.searchHistory {
  margin-top: 20rpx;
  padding-left: 32rpx;
}

.searchHistory .goHistory{
  line-height:60rpx;
  font-weight:400;
  color: #C09E57;
  font-size:26rpx;
}

.searchHistory .sign{
  display: flex;
  flex-direction: column;
}

.searchHistory .sign .item{
  font-size:26rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:60rpx
}

.searchHistory .backHistory{
  font-size:26rpx;
  font-weight:400;
  color:rgba(192,158,87,1);
  line-height:60rpx;
  margin-top: 50rpx;
}

.searchHistory .ul{
  margin-right: 36rpx;
  margin-top: 29rpx;
}

.searchHistory .ul .li {
  font-size:26rpx;
  font-weight:300;
  color:rgba(51,51,51,1);
  line-height:78rpx;
  border-bottom: 1px solid #E5E5E5;
  overflow: hidden;
  height: 78rpx;
}

.searchHistory .ul .li .left {
  float: left;
}

.searchHistory .ul .li .right {
  float: right;
  color: #999999;
}

