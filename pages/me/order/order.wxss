page {
  background: #f5f5f5;
}

.tab {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  line-height: 84rpx;
  background: #fff;
  border-top: 1px solid #efefef;
}

.tab > view.active {
  color: #c09e57;
}

.item {
  margin-top: 24rpx;
  min-height: 336rpx;
  padding: 0 38rpx;
  background: #fff;
}

.item .top {
  padding-top: 38rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #e4e4e4;
}

/* 多个 */

.top-imgs {
  white-space: nowrap;
}

.top-imgs > image {
  background: red;
  margin-right: 20rpx;
}

.item .middle {
  padding-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 100rpx;
  font-size: 24rpx;
  border-bottom: 1px solid #e4e4e4;
}

.item .middle > view text {
  margin-left: 20rpx;
}

.item .bottom {
  display: flex;
  justify-content: space-between;
  height: 100rpx;
}

.item .bottom > view {
  display: flex;
  align-items: center;
}

.bottom .b-status .bs-dot {
  width: 18rpx;
  height: 18rpx;
  border-radius: 18rpx;
  background: rgba(41, 204, 65, 1);
  box-shadow: 0px 2px 3px 0px rgba(109, 136, 236, 0.5);
}

.bottom .b-status > text {
  margin-left: 18rpx;
  font-size: 26rpx;
  color: #c09e57;
}

.bottom .b-btn > view {
  padding: 6rpx 36rpx;
  color: #c09e57;
  border: 1px solid #000;
}

.bottom .b-btn > view:active {
  opacity: 0.7;
}

/* 单个 */

.oneTop {
  display: flex;
}

.oneTop-img > image {
  background: red;
  margin-right: 60rpx;
}

.t-right {
  height: 190rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.t-right .r-tit {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.t-right .r-exted {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.r-exted .re-left {
  flex: 1;
  display: inline-flex;
  justify-content: space-between;
}

.r-exted .re-right {
  margin-left: 58rpx;
}
.t-right .r-price {
  padding-top: 30rpx; 
  font-size: 28rpx;
}
