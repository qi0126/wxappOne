page {
  background: #fff
}

.top {
  padding: 0 34rpx;
}

.col {
  padding-top: 30rpx;
  position: relative;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #E5E5E5;
}

.col > text {
  min-width: 150rpx;
  margin-right: 10rpx;
}

.col > input {
  display: block;
  padding: 0 40rpx;
  background: #fff
}

.right {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between
}

.right-addr {
  flex: 1
}

.arrow {
  background: red
}

.edit-default {
  margin-top: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #999;  
}

.edit-default > image {
  margin-right: 20rpx
}

button {
  position: fixed;
  bottom: 0
}

.def-city {
  color: #999
}