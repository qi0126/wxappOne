<view class='prop-wrap' hidden='{{defProp}}'>
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class='prop-con'>
      <view>
        <view class='prop-tit'>{{tit}}</view>
         <textarea class='prop-info' name='reMark' placeholder='{{place}}' placeholder-class='def-place' value='{{value}}'></textarea> 
      </view> 
      <view class='pro-btn'>
        <button form-type='reset' class='pro-btl btn btn-default'>取消</button>
        <button formType="submit" class='pro-btr btn btn-default'>确定</button>
      </view>
    </view>
  </form>
</view>