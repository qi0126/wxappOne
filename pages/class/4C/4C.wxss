page {
  background: #FFF;
  padding-bottom: 190rpx;
}

.top {
  margin-top: 10rpx;
  padding: 60rpx  38rpx 40rpx;
  box-shadow: 0 0rpx 20rpx rgba(100, 100, 100, .1);
}

.t-tit {
  font-size: 48rpx;
  margin-bottom: 40rpx;
}

.t-section {
  line-height: 1.5;
  margin-bottom: 35rpx;
}

.section {
  margin-top: 30rpx;
  box-shadow: 0 0rpx 20rpx rgba(100, 100, 100, .1);
}

.s-tit {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 40rpx;
  height: 90rpx;
  border-bottom: 1px solid #E5E5E5
}

.st-left {
  display: flex;
  align-items: center;
  font-size: 30rpx;
}

.st-left > image {
  margin-right: 20rpx;
}

.st-right {
  font-size: 24rpx;
  color: #C09E57 
}

.s-show {
  color: #999;
  font-size: 22rpx;
  padding: 38rpx 38rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.s-show > view:nth-of-type(2) {
  margin-right: 100rpx;
}

.s-info {
  padding: 50rpx 40rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5
}

.s-unit {
  margin-top: -30rpx;
  color: #F87F86;
  display: flex;
  justify-content: flex-end;
  padding-right: 40rpx; 
  padding-top: 20rpx;
  padding-bottom: 40rpx;
}

.sizeimg {
  width: 52rpx;
  height: 50rpx;
  transition: transform 1s 
}

.colorimg {
  width: 100rpx;
  height: 100rpx;
  transition: background 1s;
  background: url(https://img.batar.cn/class/color/D@2x.png) no-repeat center;
  background-size: 100rpx 100rpx;
}

.caimg {
  width: 100rpx;
  height: 100rpx;
  transition: background 1s;
  background: url(https://img.batar.cn/class/color/D@2x.png) no-repeat center;
  background-size: 100rpx 100rpx;
}

.cutImg {
  width: 100rpx;
  height: 100rpx;
  transition: background 1s;
  background: url(https://img.batar.cn/class/color/D@2x.png) no-repeat center;
  background-size: 100rpx 100rpx;
}

/* 进度条 */

.s-slide {
  margin: 0 auto;
  width: 710rpx;
  box-sizing: border-box;
  padding-bottom: 130rpx;
  display: flex;
  justify-content: center;
  position: relative;
}

.ss-hr {
  position: absolute;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
  z-index: 1;
}

.ss-tag {
  box-sizing: border-box;
  margin-top: -20rpx;
  width: 100%;
  padding: 0 45rpx;
  display: flex;
  justify-content: space-between;
}

.ss-tag > view {
  width: 6rpx;
  height: 14rpx;
  background: #F87F86
}

.ss-num {
  box-sizing: border-box;
  width: 100%;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
}

.ss-num > view {
  margin-top: 36rpx;
}

.ss-scale {
  position: absolute;
  z-index: 2;
  top: -15rpx;
  /* left: 15rpx; */
  /* left: 640rpx; */


}
